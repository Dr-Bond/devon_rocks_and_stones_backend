{% extends 'base.html.twig' %}
{% set tab = 'Players' %}
{% block title %}{{ tab }}{% endblock %}

{% block body %}
<table class="table table-striped table-hover faded-background">
    <thead class="thead-dark">
    <tr>
        <th scope="col">#</th>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">Email</th>
        <th scope="col">Address</th>
        <th scope="col">Last Login</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for player in players %}
    <tr>
        <th scope="row">{{ loop.index }}</th>
        <td>{{ player.firstName }}</td>
        <td>{{ player.surname }}</td>
        <td>{{ player.user.email }}</td>
        <td>{{ player.address|join(', ') }}</td>
        <td>{{ player.user.lastLogin|date("d/m/Y") }}</td>
        <td>
            <div class="btn-group" role="group" aria-label="actions">
                <a class="btn btn-success" href="{{ path('app_web_player_send_email',{'id': player.id}) }}" role="button">Send Email</a>
                <a class="btn btn-primary" href="{{ path('app_web_player_activity',{'id': player.id}) }}" role="button">View Activity</a>
            </div>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}