{% extends 'base.html.twig' %}
{% set tab = 'Players' %}
{% set title = 'Email - ' ~ player.firstName ~ ' ' ~ player.surname %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row faded-background">
            <div class="col-sm-1"></div>
            <div class="col-sm-10"><h1>{{ title }}</h1>
                {{ form_start(form) }}
                    {{ form_errors(form) }}
                    {{ form_row(form.content) }}
                    {{ form_row(form.save) }}
                {{ form_end(form) }}
            </div>
            <div class="col-sm-1"></div>
        </div>
    </div>
{% endblock %}