<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Devon Rocks And Stones{% endblock %}</title>
        {% block stylesheets %}{{ encore_entry_link_tags('app') }}{% endblock %}
    </head>
    <body class="{% block body_class %}body-default{% endblock %}">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">Devon Rocks And Stones</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {% if tab is defined %}
                <li class="nav-item {{ tab == 'Players' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('app_web_player') }}">Players <span class="sr-only">{{ tab == 'Players' ? '(current)' : '' }}</span></a>
                </li>
                <li class="nav-item {{ tab == 'Players Activity' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('app_web_player_activity') }}">Players Activity <span class="sr-only">{{ tab == 'Players Activity' ? '(current)' : '' }}</span></a>
                </li>
                <li class="nav-item {{ tab == 'Hidden Stones' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('app_web_location_hidden_stones') }}">Hidden Stones <span class="sr-only">{{ tab == 'Hidded Stones' ? '(current)' : '' }}</span></a>
                </li>
                <li class="nav-item {{ tab == 'Weekly Points' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('app_web_player_weekly_points') }}">Weekly Points <span class="sr-only">{{ tab == 'Weekly Points' ? '(current)' : '' }}</span></a>
                </li>
                {% endif %}
            </ul>
        </div>
    </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}
    </body>
</html>
